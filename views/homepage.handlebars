<!-- Loop over each object in the projects array -->
<div id="event_container" class="d-flex flex-wrap m-5 p-2 ">
  {{#each playdates as |playdate| }}
  <div class="card rounded text-center" style="width: 18rem;">
    <img class="card-img-top" src="{{Pet.IMAGE}}" alt="{{Pet.Name}}">
    <div class="card-body">
      <h5 class="card-title">{{Pet.Name}}</h5>
      <p class="card-text">
        {{Pet.Age}} <br> {{Pet.Breed}} <br> {{Pet.Species}}
      </p>
      <a href="{{Event:ID}}" class="btn btn-primary">View Details</a>
    </div>
  </div>

  {{/each}}
</div>