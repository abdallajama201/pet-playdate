<div class="card w-50 mx-auto m-5 p-2 text-center">
    <!-- Conditional Logic More Than One Pet -->
    {{#each user.pets as |pet|}}
   <img class="card-img-top mx-auto" style="width: 18rem; height: 18rem;" src="{{pet.image}}" alt="{{pet.pet_name}}">
    <div class="card-body">
    <h5 class="card-title">{{pet.pet_name}}</h5>
    <p class="card-text">Age: {{pet.age}} <br>Breed: {{pet.breed}}</p>
    {{/each}}
    <p class="card-text">Host: {{user.user_name}}</p>
        <form class="form new-blog-form p-2" id="create_event">
            <div class="form-group p-2">
                <label for="event_date">What day would you like to have the playdate?</label>
                <input class="form-input" type="date" id="event_date" name="event_date" />
            </div>
            <div class="form-group p-2">
                <label for="event_time">What time is the playdate?</label>
                <input class="form-input" type="time" id="event_time" name="event_time" />
            </div>
            <div class="form-group p-2">
                <label for="event_location">Where is the playdate going to be held?</label>
                <input class="form-input" type="text" id="event_location" name="event_location" />
            </div>
            <div class="form-group p-2">
                <input class="form-input" type="hidden" id="user_id" name="user_id" value="{{this.id}}"/>
                <button type="submit" class="btn btn-primary" id="create_event">Create Playdate</button>
            </div>
        </form>

    </div>
</div>
<script src="/js/addEvent.js"></script>