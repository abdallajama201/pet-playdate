<div class="card w-50 mx-auto m-5 p-2 text-center">
    <img class="card-img-top" src="..." alt="Card image cap">
    <div class="card-body">
        <!-- Conditional Logic More Than One Pet -->
        
        <h5 class="card-title">{{pet.pet_name}}</h5>
        <p class="card-text">Age: {{pet.age}} <br>Breed: {{pet.breed}} <br> Host:
            {{user.user_name}}</p>
        <form class="form new-blog-form p-2">
            <div class="form-group p-2">
                <label for="event_date">Date</label>
                <input class="form-input" type="text" id="event_date" name="event_date" />
            </div>
            <div class="form-group p-2">
                <label for="event_time">Time</label>
                <input class="form-input" type="number" id="event_time" name="event_time" />
            </div>
            <div class="form-group p-2">
                <label for="event_location">Location</label>
                <input class="form-input" type="text" id="event_location" name="event_location" />
            </div>
            <div class="form-group p-2">
                <button type="submit" class="btn btn-primary">Create Playdate</button>
            </div>
        </form>

    </div>
</div>
<script src="/js/addEvent.js"></script>